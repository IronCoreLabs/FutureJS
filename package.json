    "karma-jasmine": "^1.1.1",
    "karma-jasmine-matchers": "^3.7.0",
    "karma-spec-reporter": "^0.0.32",
    "karma-typescript": "^3.0.12",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"

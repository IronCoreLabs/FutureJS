{
    "name": "futurejs",
    "version": "2.1.1",
    "description": "Promise-alternative library for doing asynchronous operations",
    "repository": "https://github.com/IronCoreLabs/futurejs",
    "author": "IronCore Labs",
    "license": "MIT",
    "main": "Future.js",
    "types": "index.d.ts",
    "scripts": {
        "lint": "tslint -p \"tsconfig.json\" Future.ts",
        "test": "tsc --noEmit && yarn run lint && yarn run unit",
        "unit": "jest",
        "build": "tsc -d --lib es5,es2015.promise Future.ts && mv Future.d.ts index.d.ts"
    },
    "devDependencies": {
        "@types/jest": "^26.0.15",
        "jest": "^26.6.0",
        "jest-extended": "^0.11.5",
        "ts-jest": "^26.4.4",
        "tslint": "^5.17.0",
        "typescript": "^3.5.1"
    },
    "prettier": {
        "printWidth": 160,
        "tabWidth": 4,
        "trailingComma": "es5",
        "bracketSpacing": false,
        "jsxBracketSameLine": true,
        "arrowParens": "always"
    }
}
